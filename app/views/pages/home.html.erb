<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-6'>
      <ul>
        <% @products.each do |product| %>
          <li>
            <%= link_to product.name, product %>
            <%= product.price %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class='col-md-6'>
      <ul>
        <% @locations.each do |location| %>
          <li>
            <%= link_to location.island, location %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <ul>
        <% @categories.each do |category| %>
          <li>
            <%= link_to category.name, category %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
