<%= form_for @product do |f| %>
  <div class="form-group">
    <label>Location</label>
    <%= f.select :location_id, [["Bali", @bali], ["Sumatra", @sumatra], ["Lombok", @lombok]], id: "location", prompt: "Select Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Category</label>
    <%= f.select :category_id, [["Surfboards", @surfboards], ["Bodyboards", @bodyboards], ["Skateboards", @skateboards], ["Swimfins", @swimfins], ["Fins", @fins], ["Leashes", @leashes], ["Tailpads", @tailpads], ["Boardbags", @boardbags], ["Clothing", @clothing], ["Wetsuits", @wetsuits], ["Cameras", @cameras], ["Others", @others]], id: "category", prompt: "Select category", class:"form-control" %>
  </div>

  <div class="form-group">
    <label>Product Name</label>
    <%= f.text_field :name, placeholder: "Product Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price</label>
    <div class="input-group">
      <div class="input-group-addon">IDR</div>
        <%= f.number_field :price, placeholder: "eg. 100", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Save Product", class: "btn btn-primary" %>
  </div>


<% end %>
